{% set contentBlocks = paragraph.getComponent() %}
<section class="nsw-section {% if contentBlocks.callout_background == 'dark' %}
  nsw-bg--brand-dark nsw-text--light
{% elseif contentBlocks.callout_background == 'light' %}
  nsw-bg--brand-light
{% elseif contentBlocks.callout_background == 'grey' %}
  nsw-bg--off-white
{% endif %} {{ paragraph.getPaddingControlClass() }}">
  <div class="nsw-container">
    {% include '@dphi_base_theme/components/component--content-blocks.html.twig' with {contentBlocks} %}
  </div>
</section>
